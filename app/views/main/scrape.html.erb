<div id="main-table">
  <div class="row">
    <% @site_reviews["telugu"].each do |site, review_det|  %>
            <div class="col-md-4 col-sm-4 box">
                    <div class="review-box">
                            <h2>Great Andhra</h2>
                            <ul class="list-unstyled">
                                    <% review_det.each do |l| %>
                                    <li><a href="<%= l['href']%>" target="_blank"><%= l['text']%> 
                                            <strong class="pull-right"><%= l['rating']%></strong></a>
                                    </li>
                                    <% end %>
                            </ul>
                    </div>
            </div>
            <!-- Add the extra clearfix for only the required viewport -->
    <% end %>       
  </div>
</div>

