<div id="main-table">
	<div class="row">
		<div class="col-md-4 col-sm-4 box">
			<div class="review-box">
				<h2>Great Andhra</h2>
				<ul class="list-unstyled">
					<% @ga_reviews.each do |l| %>
					<li><a href="<%= l['href']%>" target="_blank"><%= l['text']%> 
						<strong class="pull-right"><%= l['rating']%></strong></a>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="col-md-4 col-sm-4">
			<div class="review-box">	
				<h2>Idlebrain</h2>
				<ul class="list-unstyled">
					<% @ib_reviews.each do |l| %>
					<li><a href="<%= l['href']%>" target="_blank"><%= l['text']%> 
						<strong class="pull-right"><%= l['rating']%></strong></a>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="col-md-4 col-sm-4">
			<div class="review-box">
				<h2>Gulte.com</h2>
				<ul class="list-unstyled">
					<% @gt_reviews.each do |l| %>
					<li><a href="<%= l['href']%>" target="_blank"><%= l['text']%> 
						<strong class="pull-right"><%= l['rating']%></strong></a>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
		<!-- Add the extra clearfix for only the required viewport -->
	</div>
</div>

